<view class="container">
  <view class="wx-cells">
    <view class="wx-cell" data-route="../profile/profile" data-id="1" bindtap="navToPage">
      <image class="wx-cell-icon user-avatar" src="{{userInfo.avatarUrl}}"></image>
      <view class="user-info">
        <text class="user-info-text">{{userInfo.nickName}}</text>
        <text class="user-info-text user-info-uid">City: {{userInfo.city}}</text>
      </view>
      <image class="wx-cell-arrow" src="../../assets/right-gray.png"></image>
    </view>
  </view>
  <view class="wx-cells">
    <view class="wx-cell" data-route="../feedback/feedback" bindtap="navToPage">
      <image class="wx-cell-icon" src="../../assets/feedback.png"></image>
      <text class="wx-cell-text">留言</text>
      <image class="wx-cell-arrow" src="../../assets/right-gray.png"></image>
    </view>
  </view>
  <view class="wx-cells">
    <view class="wx-cell">
      <image class="wx-cell-icon" src="../../assets/language.png"></image>
      <text class="wx-cell-text">Language</text>
      <image class="wx-cell-arrow" src="../../assets/right-gray.png"></image>
    </view>
  </view>
  <view class="wx-cells">
    <view class="wx-cell" data-route="../about/about" bindtap="navToPage">
      <image class="wx-cell-icon" src="../../assets/about.png"></image>
      <text class="wx-cell-text">关于我们</text>
      <image class="wx-cell-arrow" src="../../assets/right-gray.png"></image>
    </view>
  </view>
  <view class="wx-cells" wx:if="{{!userInfo}}">
    <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
  </view>
</view>